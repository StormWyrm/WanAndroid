<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/textColorThird">

    <item>
        <shape>
            <corners android:radius="24dp" />
            <padding
                android:bottom="4dp"
                android:left="12dp"
                android:right="12dp"
                android:top="4dp" />
            <size
                tools:height="24dp"
                tools:width="48dp" />
            <solid android:color="@color/bgColorThird" />
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape>
            <corners android:radius="24dp" />
            <padding
                android:bottom="4dp"
                android:left="12dp"
                android:right="12dp"
                android:top="4dp" />
            <size
                tools:height="24dp"
                tools:width="48dp" />
            <solid android:color="@color/bgColorThird" />
        </shape>
    </item>

</ripple>